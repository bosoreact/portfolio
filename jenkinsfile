pipeline {
    agent any
    tools {
        nodejs 'Node.js 16.20.0' // Specify the desired Node.js version
    }
    stages {stage('Check PATH') {
            steps {
                script {
                    echo "PATH: ${env.PATH}"
                }
            }
        }
        stage('Build') {
            steps {
                echo 'Installing Dependencies'
                sh 'npm install'
				echo 'Building NextJS App'
				sh '/usr/bin/npx node_modules/next/dist/bin/next build'

            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}