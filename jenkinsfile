pipeline {
    agent any
    stages {stage('Check PATH') {
            steps {
                script {
                    echo "PATH: ${env.PATH}"
                }
            }
        }
        stage('Build') {
            steps {
                echo 'Installing Dependencies'
                sh 'npm install'
				echo 'Building NextJS App'
				sh ' /usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/snap/bin node_modules/next/dist/bin/next build'

            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}