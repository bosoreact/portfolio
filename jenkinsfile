pipeline {
    agent any
    tools {
        nodejs 'node installer 16.20' // Specify the desired Node.js version
    }
    stages {
        stage('Check PATH') {
            steps {
                script {
                    echo "PATH: ${env.PATH}"
                }
            }
        }
        stage('Build') {
            steps {
                nodejs('node installer 16.20') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
        stage('Run'){
            steps {
                echo 'Running...'
                 nodejs('node installer 16.20') {
                    sh 'sudo npm start -p 80'
                 }
            }
        }
    }
}