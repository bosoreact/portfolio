pipeline {
    agent any
    tools {
        nodejs 'node installer 16.20' // Specify the desired Node.js version
    }
    stages {
        stage('Check PATH') {
            steps {
                script {
                    echo "PATH: ${env.PATH}  "
                    echo "PATH:   ${sudo-psw} "
                }
            }
        }
        stage('Build') {
            steps {
                nodejs('node installer 16.20') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
        stage('Run'){
            steps {
                echo 'Running...${sudo-psw}'
                 nodejs('node installer 16.20') {
                    sh 'npm start'

                 }
            }
        }
    }
}